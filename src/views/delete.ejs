<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
      }

      .topnav {
        overflow: hidden;
        background-color: #333;
      }

      .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }

      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }

      .topnav a.active {
        background-color: #04aa6d;
        color: white;
      }
      .cangcuc {
        align-items: center;
        width: 50%;
        margin: 0 auto;
      }

      input {
        margin-bottom: 10px;
        padding: 5px 10px;
      }
    </style>
  </head>
  <body>
    <!-- <%= JSON.stringify(userEdit) %> -->
    <div class="topnav">
      <a href="/">Home</a>
      <a class="active" href="/create">DeleteUser User</a>
    </div>

    <div class="form cangcuc">
      <form action="/delete-user" method="POST">
        <fieldset>
          <legend>Delete</legend>
          <div class="input-group" style="display: none">
            <label for=""> id : </label>
            <input type="text" name="id" value="<%= userEdit[0].id %>" />
          </div>
          <div class="input-group">
            <label for=""> Email : </label>
            <input type="text" name="email" value="<%= userEdit[0].email %>" />
          </div>

          <div class="input-group">
            <label for=""> Name : </label>
            <input type="text" name="name" value="<%= userEdit[0].name %>" />
          </div>

          <button>save</button>
        </fieldset>
      </form>
    </div>
  </body>
</html>
